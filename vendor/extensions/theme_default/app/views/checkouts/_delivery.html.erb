<div id='shipping_method'>
  <h2><%= t("shipping_method") %></h2>
  <% checkout_form.fields_for :shipment do |shipment| %>     
    <div class="inner">
      <div id="methods">
        <% @available_methods.each do |shipping_method| %>
          <p>
            <%= shipment.radio_button("shipping_method_id", shipping_method[:id]) %>
            <%= shipping_method[:name] %>
            <%= shipping_method[:rate] %>
          </p>
        <% end %>
      </div>
      <% if Spree::Config[:shipping_instructions] %>
        <p id="minstrs">
          <label for=""><%= t("shipping_instructions") %></label>
          <%= shipment.text_area :special_instructions, :cols => 40, :rows => 7 -%>
        </p>
      <% end %>
    </div>
    <div class="form-buttons">
      <input type="submit" class="continue button primary" value="<%=t("save_and_continue") %>"/>
    </div>
  <% end %>
</div>